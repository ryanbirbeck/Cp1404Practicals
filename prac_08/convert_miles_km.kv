BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: '5'
            font_size: 45
            id: input_label
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'up'
                on_press: app.handle_up(input_label.text)
            Button:
                text: 'down'
                on_press: app.handle_down(input_label.text)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_conversion(input_label.text)
    Label:
        id: output_label
        font_size: 45
        text: ''
